generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  fullname String
  number Int @unique
  password String
  profile String
  chats Chat[]
}

model Chat {
  id String @id
  combinedUserIds String
  refereeId String
  data Chatdata[]
  user User @relation(fields: [refereeId], references: [id])
}

model Chatdata {
  id String @id
  chatId String
  date String
  messages Messages[]
  chat Chat @relation(fields: [chatId], references: [id])
}

model Messages {
  id String @id
  chatDataId String
  from String
  time String
  message String
  chatData Chatdata @relation(fields: [chatDataId], references: [id])
}